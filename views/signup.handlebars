<h3>Signup</h3>

<form class="form login-form">
  <div class="form-group">
    <label for="name-login"><h4>name:</h4></label>
    <input class="form-input" type="text" id="name-login" />
  </div>
  <div class="form-group">
    <label for="email-login"><h4>email:</h4></label>
    <input class="form-input" type="text" id="email-login" />
  </div>
  <div class="form-group">
    <label for="password-login"><h4>password:</h4></label>
    <input class="form-input" type="password" id="password-login" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit"><h4>signup</h4></button>
  </div>
</form>

<script src="/js/signup.js"></script>
